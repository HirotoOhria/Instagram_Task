<div class="reply">
  <%= link_to gravatar_for(comment.user, size: 50), comment.user %>
  <span class="user"><%= link_to comment.user.name, comment.user %></span>
  <span class="content">
    [reply] <%= comment.message %>
  </span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(comment.created_at) %> ago.
    <!--<%= link_to "reply", new_micropost_comment_path(comment) %>-->
    <% if current_user?(comment.user) %>
      <%= link_to "delete", "/microposts/#{comment.micropost_id}/comments/#{comment.id}", method: :delete,
                                       data: { confirm: "You sure?" } %>
    <% end %>
  </span>
</div>
