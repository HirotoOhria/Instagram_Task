<% provide(:title, 'New Message') %>

<h1>New Message</h1></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@comment, url: micropost_comments_path(current_micropost)) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :message %>
      <%= f.text_area :message, class: 'form-control' %>

      <%= f.submit "submit new comment", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>